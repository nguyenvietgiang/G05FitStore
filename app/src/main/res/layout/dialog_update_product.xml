<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_white_corner_16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/bg_green_corner_16dp_top"
        android:text="Cập Nhật Sản Phẩm"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:id="@+id/et_nameUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_corner_10dp_border_gray"
        android:textSize="15dp"
        android:padding="12dp"
        android:hint="Nhập tên sản phẩm"/>

    <EditText
        android:id="@+id/et_priceUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/color_171717"
        android:background="@drawable/bg_white_corner_10dp_border_gray"
        android:textSize="15dp"
        android:padding="12dp"
        android:hint="Nhập giá sản phẩm"/>

    <EditText
        android:id="@+id/et_descUpdate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/bg_white_corner_10dp_border_gray"
        android:textSize="15dp"
        android:gravity="start"
        android:padding="12dp"
        android:hint="Nhập mô tả sản phẩm"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_UpdateProduct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/second_background"
            android:text="Cập nhật" />

        <Button
            android:id="@+id/btn_closeUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/color_171717"
            android:text="Quay lại" />
    </LinearLayout>


</LinearLayout>