<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imbEditProfile"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/neumorphism_fab_button"
                android:src="@drawable/ic_settings" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civAvatarProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/img_avatar_default"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/item"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="32dp"
                android:layout_marginTop="22dp"
                android:layout_centerHorizontal="true"

                android:gravity="center"
                android:textColor="@color/primary_text"
                android:layout_marginRight="5dp"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/txtName"
                android:src="@drawable/ic_badge_check"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txtNickName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="'@Username"
            android:textSize="18dp"
            android:textColor="@color/secondary_text"
            android:layout_marginTop="5dp"

            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:background="@color/secondary_text"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ: Dong Anh - Ha Noi"
                android:textColor="@color/primary_text"
                android:padding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin chi tiết"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:background="@color/secondary_text"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/txtStudentCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại: 0946783295"
                android:textColor="@color/primary_text"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/txtClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class: 1910A04"
                android:textColor="@color/primary_text"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/txtSpecialized"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="learning status: năm 5"
                android:textColor="@color/primary_text"
                android:padding="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liên hệ"
                android:textStyle="bold"
                android:textColor="@color/primary_text"
                android:background="@color/secondary_text"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email: username@gmail.com"
                android:textColor="@color/primary_text"
                android:padding="10dp"/>

            <Button
                android:id="@+id/logoutbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4fc4f3"
                android:text="Đăng xuất"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>