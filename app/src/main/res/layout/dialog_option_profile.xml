<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_white_corner_16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_green_corner_16dp_top"
        android:gravity="center"
        android:padding="12dp"
        android:text="Quản lý tài khoản"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/changeprofile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15px"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/orange"
        android:text="Đổi thông tin"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/sendFeedback"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15px"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/item"
        android:text="Gửi phản hồi"
        android:visibility="gone"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/changepass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/primary_background"
        android:text="Đổi mật khẩu"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/bold_red"
        android:text="Đăng xuất"
        app:cornerRadius="8dp" />

    <Button
        android:id="@+id/btn_closeOption"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/color_171717"
        android:text="Quay lại" />

</LinearLayout>