<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"/>
            <solid android:color="@color/dark_shadow"/>
        </shape>
    </item>
    <item android:right="3dp" android:left="0dp" android:bottom="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/light_shadow"/>
            <corners android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topRightRadius="20dp"
                android:topLeftRadius="20dp"/>
        </shape>
    </item>
    <item android:right="3dp" android:left="3dp" android:bottom="3dp"
        android:top="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/secondary_text"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>
</layer-list>