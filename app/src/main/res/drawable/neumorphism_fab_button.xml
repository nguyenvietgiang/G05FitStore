<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>/>
        </shape>
    </item>
    <item android:right="3dp" android:left="0dp" android:bottom="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/light_shadow"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item android:right="3dp" android:left="3dp" android:bottom="3dp"
        android:top="3dp">
        <shape
            android:shape="rectangle">
            <gradient android:startColor="@color/light_shadow"
                android:endColor="@color/dark_shadow"
                android:angle="-45"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
</layer-list>